$eye_font_family = "fontsmith-overrides";
$eye_value = "\e000";
$eye = "fontsmith-overrides" "\e000";
$building_block_font_family = "fontsmith-overrides";
$building_block_value = "\e001";
$building_block = "fontsmith-overrides" "\e001";
$moon_font_family = "fontsmith-overrides";
$moon_value = "\e002";
$moon = "fontsmith-overrides" "\e002";

iconFontFamily($char) {
  font-family: $char[0];
}

iconFont() {
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
}

iconContent($char) {
  content: $char[1];
}

icon($char) {
  iconFontFamily($char)
  iconFont()

  &:before {
    iconContent($char)
  }
}

@font-face {
  font-family: "fontsmith-overrides";
  src:url("eof.svg");
  src:url("eof.svg?#iefix") format("embedded-opentype"),
    url("waffles.ttf") format("woff"),
    ;
  font-weight: normal;
  font-style: normal;
}
